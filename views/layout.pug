doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='A duplicate stack overflow site to mimic ')
  meta(name='author' content='Pavan')
  link(rel="apple-touch-icon", href="/images/stack-logo.png")
  link(rel='manifest' href='/javascripts/pwa.webmanifest')
  title Stack Overflow - Pavan
  // Bootstrap core CSS
  link(href='/bootstrap/css/bootstrap.min.css' rel='stylesheet')
  script.
    if ("serviceWorker" in navigator) {
        window.addEventListener("load", () => {
            navigator.serviceWorker.register("sw.js").then(swReg => { console.log("service worker registered") }).catch(err => {
                console.error('Service Worker Error', err);
            });
        });
    }

header
  nav.navbar.sticky-top.navbar-light(style='background-color: #FF9958;')
    a.navbar-brand(href='/') Stack Overflow

main(role='main')
  .container.mt-3
    form(action='/search', method='GET')
      .input-group
        input#search.form-control(type='search' name='question' placeholder='Search' aria-label='Search' aria-describedby='search-addon')
        button.btn.btn-outline-primary(type='submit') search
    block content
